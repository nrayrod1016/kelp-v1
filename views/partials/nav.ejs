          <% if (user) { %>
            <div id="profile-dropdown" class="dropdown text-end">
              <a 
                id="dropdownUser"
                href="#"
                class="d-block link-light text-decoration-none"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <% if(user?.profile.avatar) {%>
                  <img 
                    class="rounded-circle avatar-img"
                    src="<%= user.profile.avatar %>" 
                    alt="Your avatar"
                  >
                <% } else { %>
                  <img
                    class="avatar-img"
                    alt="A placeholder avatar"
                  >
                <% } %> 
              </a>
             <!-- dropdown menu -->
              <ul >
                <li>
                  <a href="/profiles/<%= user.profile._id %>">
                    My Profile
                  </a>
                </li>
                <li><hr class="dropdown-divider bg-secondary text-white"></li>
                <li>
                  <a 
                    href="/auth/logout">
                    Sign Out
                  </a>
                </li>
              </ul>
            </div>
          <% } else { %>
            <a href="/auth/google">
              <button type="submit">
                <img  alt="Sign in with Google" />
              </button>
            </a>
          <% } %>
        </div>
      </div>
