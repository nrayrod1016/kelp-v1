<%- include('../partials/nav') %>
    <div class="container">
      <h2 class="mt-3 mb-3">Restaurants Section</h2>
      <!-- will show here  -->
      <% restaurants.forEach(function(restaurant) { %>
              <% if (restaurant.avatar) { %>
                <img 
                  src="<%= restaurant.avatar %>" 
                  alt="<%= restaurant.name %> profile"
                  class="img-fluid rounded-start"
                />
              <% } else { %>
                <img 
                  src="/images/user.png" 
                  alt="placeholder avatar"
                  class="img-fluid rounded-start"
                >
              <% } %> 
            </div>
            <div class="col-md-10">
              <div class="card-body">
                <h3 class="card-title"><%= restaurant.name %></h3>
                <ul>
                  <% restaurant.facts.forEach(function(fact) { %>
                    <li class="card-text">
                      <%= fact.text %>
                      <% if (restaurant._id.equals(user?.restaurantProfile._id)) { %>
                        <form action="/restaurants/items/<%= fact._id %>?_method=DELETE" method="POST">
                          <button>X</button>
                        </form>  
                      <% } %>
                    </li>
                  <% }) %>
                </ul>
                <% // Add dynamic UI form below this line %> 
                <% if (restaurant._id.equals(user?.restaurantProfile._id)) { %>
                  <div class="card-footer">
                    <form
                      action="/restaurants/item"
                      method="POST"
                      class="input-group"
                    >
                      <input
                        type="text"
                        name="text"
                        class="form-control form-control-dark"
                        placeholder="Add a fact..."
                        autocomplete="off"
                        required
                      />
                      <button type="submit" class="btn btn-primary">
                        Add Fact
                      </button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
      <%- include('../partials/footer') %>
