<div class="card text-center">
  <div class="card-header">
   <h1> Create A Restaurant </h1>
 </div>
 <div class="card-body">
 
<form action="/restaurants" method="POST">
  <h1 class="card-text">
    <!-- Enter a Restaurant -->
  </h1>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label card-text">Name of Restaurant:</label>
    <div class="col-sm-2">
      <input name="title" placeholder="enter restaurant">
    </div>
  </div>
  </div>

  <!-- restaurant description -->
  <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Restaurant Description</label>
    <div class="col-sm-2">
      <input name="content" placeholder="enter restaurant" class="form-control" id="inputPassword3">
    </div>
  </div>

      <!-- city  -->
    <div class="row mb-3">
      <label for="inputPassword3" class="col-sm-2 col-form-label">City</label>
      <div class="col-sm-2">
        <option name="content" placeholder="enter restaurant" class="form-control" id="inputPassword3">Nyc</option>
      </div>
    </div>
  <!-- rating field  -->
  <fieldset class="row mb-3">
    <legend class="col-form-label col-sm-2 pt-0">Enter a rating (1-5)</legend>
    <div class="col-sm-1">
      <div class="form-check">
          <!-- <label for="inputState" class="form-label">How was it?</label> -->
          <select id="inputState" class="form-select">
            <option selected>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option> 
          </select>
      </div>
      <button class="btn-sm btn-primary" type="submit" href="/restaurants/show">
        Submit Restaurant
      </button>
      <div class="card-footer text-muted">
        2 days ago
      </div>
    </div>


  </div>


</div> 













