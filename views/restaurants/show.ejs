<main class="container" id="store">
  <section class="p-4 p-md-5 mb-4  rounded  mx-4">
    <div class="col-md-8 text-light px-0">
      <h1 class="text-center font-serif text-2xl" id="rest-title"> <%= restaurant.title %> </h1>
<!-- add image -->
<img src="<%=restaurant._id.imageURL %> ">

<!-- post reviews here  -->
