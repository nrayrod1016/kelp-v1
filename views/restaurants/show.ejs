<div id='posts'>
  <!-- add review form   -->
  <div class='container card mt-4 p-4'>
    <h1 class="text-gray-800 text-xl font-bold text-center ">Leave A Review</h1>
    <span>Bootstrap comment prototype + validation w/o regex</span>
    <hr>
    <form action="/reviews/<%=restaurant._id%>" method="POST">
      <div class="form-group">
        <div class="form-group">
          <input name="title" placeholder="Review Title" row="3" class="form-control mb-1" >
          <span class="text-danger" style="display: none"></span>
          <textarea class="form-control mt-2" name="content" rows="2" placeholder="Enter your review here..."></textarea>
          <label class="text-danger" style="display: none">How was it?</label>
          <select class="form-control mt-2" name="rating" rows="2" placeholder="Enter your review here...">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option> 
          </select>
          <span class="text-danger mb-5" id="error-comment" style="display: none"></span>
        </div>
      </div>
      <div class="m-3"></div>
      <button href="/restaurants" type="submit" id="submit" class="btn btn-primary float-right ">Submit Review</button>
    </form>
    <hr>
    <div id="reviews">
  
    </div>
  </div>
  



<div id='posts'>

<section> 
  <h1>CHECK DELETE SECTION</h1>
  <% restaurant.reviews.forEach(function(review) { %>
    <div class="m-5"> 
        <div class="card">
          <div class="card-header">
            <div class="text-black"><%= review.author %>
            </div>
          </div>
        <div class="card-body">
            <h5 class="card-title">
              <a href="/reviews/<%= review._id %>" class="text-xl"> 
                <%= review.title %> 
              </a></h5>
            <p class="card-text text-black text-center mb-3 ">
              <%= review.content %>
            </p>
          <div class="text-center justify-evenly ">
            <a href="/restaurants" class="btn btn-primary">
              reply to post
            </a>
            <form 
            class="ml-32 " 
            action="/reviews/<%= review._id%>?_method=DELETE" 
            method="POST"> 
              <button class="btn btn-danger ">
                DELETE
              </button>
            </form>
          </div> 

          </div>
        </div>
       
      </div>
      
   
      
       <!--  DELETE BUTTON  -->

 




  </section>

  



  <% }) %> 
  
</div> 

</div>

